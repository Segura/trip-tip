<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/units">
        <ListPreference
            app:defaultValue="km"
            app:entries="@array/distance_units_entries"
            app:entryValues="@array/distance_units_values"
            app:key="distance_units"
            app:title="@string/distance_units_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="kmh"
            app:entries="@array/speed_units_entries"
            app:entryValues="@array/speed_units_values"
            app:key="speed_units"
            app:title="@string/speed_units_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>